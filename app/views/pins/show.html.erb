<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= image_tag @pin.image(:medium), class: "center-block" %>
			</div>
			<div class="panel-body">
				<p>
				  <%= @pin.description %>
				</p>
				<strong><p><%= @pin.user.name %></p></strong>

				<% if @pin.user == current_user %>
					<%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'), edit_pin_path(@pin) %>
				<% end %>
			</div>
		</div>
	</div>
</div>

